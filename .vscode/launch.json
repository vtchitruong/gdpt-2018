{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File (PowerShell Terminal)",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}", // Ensures correct working directory

            "env": {
                "PYTHONPATH": "${workspaceFolder}/venv/Lib/site-packages" // Ensure packages are found
            },
            "console": "integratedTerminal", // Runs in PowerShell, not Debug Console

        }
    ]
}